<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_adding_question_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/question"
        android:textColor="@color/contentTextColor"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dialog_adding_question_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/question"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/dialog_adding_question_text_1" />

    <TextView
        android:id="@+id/dialog_adding_question_text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/answer"
        app:layout_constraintTop_toBottomOf="@id/dialog_adding_question_question" />

    <EditText
        android:id="@+id/dialog_adding_question_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/answer"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/dialog_adding_question_text_2" />

    <Button
        android:id="@+id/dialog_adding_question_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_adding_question_answer" />
</android.support.constraint.ConstraintLayout>